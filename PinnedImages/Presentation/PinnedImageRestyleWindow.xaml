<Window x:Class="Presentation.PinnedImageRestyleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:converters="clr-namespace:Presentation.Converters"
        xmlns:viewmodels="clr-namespace:Presentation.ViewModels"
        mc:Ignorable="d"
        Style="{StaticResource MainWindow}"
        d:DataContext="{d:DesignInstance Type=viewmodels:PinnedImageRestyleViewModel}"
        d:Height="800"
        Title="Style Image" Height="600" Width="540" Closed="Window_Closed">
    <Window.Resources>
        <converters:FrameThicknessToDoubleConverter x:Key="FrameThicknessConverter"/>
        <converters:RotationToDoubleConverter x:Key="RotationConverter"/>
        <converters:CornerToDoubleConverter x:Key="CornerConverter"/>
        <GridLengthConverter x:Key="GridLengthConverter"/>
        <Thickness x:Key="SettingItemMargin" 
                   Left="{StaticResource Thickness-0}"
                   Top="{StaticResource Thickness-0.5}"
                   Right="{StaticResource Thickness-0}"
                   Bottom="{StaticResource Thickness-0.5}"/>
        <Thickness
            x:Key="SettingItemInnerContentMargin"
            Left="{StaticResource Thickness-10}"
            Top="{StaticResource Thickness-1}"
            Right="{StaticResource Thickness-4}"
            Bottom="{StaticResource Thickness-4}"/>
    </Window.Resources>
    <!--<Window.Style>
        <Style TargetType="Window"></Style>
    </Window.Style>-->
    <ScrollViewer 
        HorizontalScrollBarVisibility="Hidden"
        VerticalScrollBarVisibility="Auto">
        <StackPanel 
            Width="480"
            HorizontalAlignment="Left">
            <StackPanel.Margin>
                <Thickness 
                    Left="{StaticResource Thickness-5}"
                    Top="{StaticResource Thickness-5}"
                    Right="{StaticResource Thickness-5}"
                    Bottom="{StaticResource Thickness-5}"
                    />
            </StackPanel.Margin>

            <!--Color-->
            <Border Background="{StaticResource White-Brush}"
                    BorderThickness="1"
                    BorderBrush="{StaticResource Neutral-300-Brush}"
                    Effect="{StaticResource Shadow-sm}"
                    CornerRadius="{StaticResource Corner-Rounded-md}"
                    Margin="{StaticResource SettingItemMargin}">

                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0"
                                Width="{StaticResource Thickness-14}"
                                Height="{StaticResource Thickness-14}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                            <TextBlock FontFamily="{StaticResource FontAwesomeFreeSolid}"
                                       Text="&#xf53f;"
                                       FontSize="{StaticResource Text-lg}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1"
                                    Orientation="Vertical"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Colors"
                                       />
                            <TextBlock Text="Set image color"
                                       FontSize="{StaticResource Text-xs}"
                                       Foreground="{StaticResource Neutral-500-Brush}"/>
                        </StackPanel>
                        <Grid 
                            Grid.Column="2">
                            <xctk:ColorPicker 
                                ColorMode="ColorCanvas"
                                VerticalAlignment="Center"
                                SelectedColor="{Binding PinnedImage.Color}">
                                <xctk:ColorPicker.Margin>
                                    <Thickness Right="{StaticResource Thickness-4}"/>
                                </xctk:ColorPicker.Margin>
                            </xctk:ColorPicker>
                        </Grid>
                    </Grid>
                </StackPanel>

            </Border>

            <!--Frame Thickness-->
            <Border Background="{StaticResource White-Brush}"
                    BorderThickness="1"
                    BorderBrush="{StaticResource Neutral-300-Brush}"
                    Effect="{StaticResource Shadow-sm}"
                    CornerRadius="{StaticResource Corner-Rounded-md}"
                    Margin="{StaticResource SettingItemMargin}">

                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0"
                                Width="{StaticResource Thickness-14}"
                                Height="{StaticResource Thickness-14}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                            <TextBlock FontFamily="{StaticResource FontAwesomeFreeSolid}"
                                       Text="&#xf545;"
                                       FontSize="{StaticResource Text-lg}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1"
                                    Orientation="Vertical"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Frame Thickness"
                                       />
                            <TextBlock Text="Set image thickness"
                                       FontSize="{StaticResource Text-xs}"
                                       Foreground="{StaticResource Neutral-500-Brush}"/>
                        </StackPanel>
                        <Grid 
                            Grid.Column="2"
                            VerticalAlignment="Center">
                            <Grid.Margin>
                                <Thickness Right="{StaticResource Thickness-4}"/>
                            </Grid.Margin>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="42"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Grid.Column="0" 
                                d:Text="100"
                                Text="{Binding PinnedImage.FrameThickness.Value, StringFormat=0.##}">
                                <TextBlock.Margin>
                                    <Thickness Right="{StaticResource Thickness-2}"/>
                                </TextBlock.Margin>
                            </TextBlock>
                            <Slider Grid.Column="1"
                                    Style="{StaticResource FlatSlider}"
                                    Minimum="0"
                                    Maximum="20"
                                    Value="{Binding PinnedImage.FrameThickness, Converter={StaticResource FrameThicknessConverter}}"/>
                        </Grid>
                    </Grid>

                    <StackPanel 
                        Orientation="Vertical"
                        Margin="{StaticResource SettingItemInnerContentMargin}">
                        <TextBlock 
                            Text="Presets"
                            />
                    </StackPanel>
                </StackPanel>

            </Border>

            <!--Rotation-->
            <Border Background="{StaticResource White-Brush}"
                    BorderThickness="1"
                    BorderBrush="{StaticResource Neutral-300-Brush}"
                    Effect="{StaticResource Shadow-sm}"
                    CornerRadius="{StaticResource Corner-Rounded-md}"
                    Margin="{StaticResource SettingItemMargin}">

                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0"
                                Width="{StaticResource Thickness-14}"
                                Height="{StaticResource Thickness-14}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                            <TextBlock FontFamily="{StaticResource FontAwesomeFreeSolid}"
                                       Text="&#xf2f9;"
                                       FontSize="{StaticResource Text-lg}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1"
                                    Orientation="Vertical"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Rotation"
                                       />
                            <TextBlock Text="Set image rotation"
                                       FontSize="{StaticResource Text-xs}"
                                       Foreground="{StaticResource Neutral-500-Brush}"/>
                        </StackPanel>
                        <Grid 
                            Grid.Column="2"
                            VerticalAlignment="Center">
                            <Grid.Margin>
                                <Thickness Right="{StaticResource Thickness-4}"/>
                            </Grid.Margin>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="42"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Grid.Column="0" 
                                d:Text="100"
                                Text="{Binding PinnedImage.Rotation.Angle, StringFormat=0.##}">
                                <TextBlock.Margin>
                                    <Thickness Right="{StaticResource Thickness-2}"/>
                                </TextBlock.Margin>
                            </TextBlock>
                            <Slider Grid.Column="1"
                                    Style="{StaticResource FlatSlider}"
                                    Minimum="0"
                                    Maximum="360"
                                    Interval="1"
                                    Value="{Binding PinnedImage.Rotation, Converter={StaticResource RotationConverter}}"/>
                        </Grid>
                    </Grid>

                    <StackPanel 
                        Orientation="Vertical"
                        Margin="{StaticResource SettingItemInnerContentMargin}">
                        <TextBlock 
                            Text="Presets"
                            />
                    </StackPanel>
                </StackPanel>

            </Border>

            <!--Corner Radius-->
            <Border Background="{StaticResource White-Brush}"
                    BorderThickness="1"
                    BorderBrush="{StaticResource Neutral-300-Brush}"
                    Effect="{StaticResource Shadow-sm}"
                    CornerRadius="{StaticResource Corner-Rounded-md}"
                    Margin="{StaticResource SettingItemMargin}">

                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0"
                                Width="{StaticResource Thickness-14}"
                                Height="{StaticResource Thickness-14}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                            <TextBlock FontFamily="{StaticResource FontAwesomeFreeSolid}"
                                       Text="&#xf546;"
                                       FontSize="{StaticResource Text-lg}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1"
                                    Orientation="Vertical"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Corner Radius"
                                       />
                            <TextBlock Text="Set image corner radius"
                                       FontSize="{StaticResource Text-xs}"
                                       Foreground="{StaticResource Neutral-500-Brush}"/>
                        </StackPanel>
                        <Grid 
                            Grid.Column="2"
                            VerticalAlignment="Center">
                            <Grid.Margin>
                                <Thickness Right="{StaticResource Thickness-4}"/>
                            </Grid.Margin>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="42"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Grid.Column="0" 
                                d:Text="100"
                                Text="{Binding PinnedImage.Corner.Radius, StringFormat=0.##}">
                                <TextBlock.Margin>
                                    <Thickness Right="{StaticResource Thickness-2}"/>
                                </TextBlock.Margin>
                            </TextBlock>
                            <Slider Grid.Column="1"
                                    Style="{StaticResource FlatSlider}"
                                    Minimum="0"
                                    Maximum="20"
                                    Value="{Binding PinnedImage.Corner, Converter={StaticResource CornerConverter}}"/>
                        </Grid>
                    </Grid>

                    <StackPanel 
                        Orientation="Vertical"
                        Margin="{StaticResource SettingItemInnerContentMargin}">
                        <TextBlock 
                            Text="Presets"
                            />
                    </StackPanel>
                </StackPanel>

            </Border>

            <!--Caption-->
            <Border Background="{StaticResource White-Brush}"
                    BorderThickness="1"
                    BorderBrush="{StaticResource Neutral-300-Brush}"
                    Effect="{StaticResource Shadow-sm}"
                    CornerRadius="{StaticResource Corner-Rounded-md}"
                    Margin="{StaticResource SettingItemMargin}">

                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0"
                                Width="{StaticResource Thickness-14}"
                                Height="{StaticResource Thickness-14}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                            <TextBlock FontFamily="{StaticResource FontAwesomeFreeSolid}"
                                       Text="&#xf031;"
                                       FontSize="{StaticResource Text-lg}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <StackPanel 
                            Grid.Column="1"
                            Orientation="Vertical"
                            VerticalAlignment="Center">
                            <TextBlock 
                                Text="Caption"
                                />
                            <TextBlock 
                                Text="Enable or disable, and set image caption text"
                                FontSize="{StaticResource Text-xs}"
                                Foreground="{StaticResource Neutral-500-Brush}"/>
                        </StackPanel>

                        <Grid 
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                            <Grid.Margin>
                                <Thickness Right="{StaticResource Thickness-4}"/>
                            </Grid.Margin>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Grid.Column="0" 
                                Text="Off">
                                <TextBlock.Margin>
                                    <Thickness Right="{StaticResource Thickness-2}"/>
                                </TextBlock.Margin>
                            </TextBlock>
                            <CheckBox 
                                Grid.Column="1" 
                                Style="{StaticResource ToggleCheckBox}"
                                IsChecked="{Binding PinnedImage.Caption.Visible}"/>
                        </Grid>
                    </Grid>
                    <StackPanel
                        Orientation="Vertical"
                        Margin="{StaticResource SettingItemInnerContentMargin}">
                        <TextBlock Text="Caption text">
                            <TextBlock.Margin>
                                <Thickness Bottom="{StaticResource Thickness-1}"/>
                            </TextBlock.Margin>
                        </TextBlock>
                        <TextBox Style="{StaticResource FlatTextBox}"
                                 MaxLines="3"
                                 Height="{StaticResource Thickness-12}"
                                 HorizontalAlignment="Stretch"
                                 TextWrapping="Wrap"
                                 Text="{Binding PinnedImage.Caption.Text, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding PinnedImage.Caption.Visible}"/>
                    </StackPanel>
                </StackPanel>

            </Border>

            <!--Shadow-->
            <Border 
                Background="{StaticResource White-Brush}"
                BorderThickness="1"
                BorderBrush="{StaticResource Neutral-300-Brush}"
                Effect="{StaticResource Shadow-sm}"
                CornerRadius="{StaticResource Corner-Rounded-md}"
                Margin="{StaticResource SettingItemMargin}">

                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Border 
                            Grid.Column="0"
                            Width="{StaticResource Thickness-14}"
                            Height="{StaticResource Thickness-14}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">
                            <TextBlock 
                                FontFamily="{StaticResource FontAwesomeFreeSolid}"
                                Text="&#xf111;"
                                FontSize="{StaticResource Text-lg}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                />
                        </Border>
                        <StackPanel 
                            Grid.Column="1"
                            Orientation="Vertical"
                            VerticalAlignment="Center">
                            <TextBlock 
                                Text="Shadow"
                                
                                />
                            <TextBlock 
                                Text="Enable or disable, and set image shadow properties"
                                FontSize="{StaticResource Text-xs}"
                                Foreground="{StaticResource Neutral-500-Brush}"
                                TextWrapping="Wrap"
                                />
                        </StackPanel>

                        <Grid 
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                            <Grid.Margin>
                                <Thickness Right="{StaticResource Thickness-4}"/>
                            </Grid.Margin>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Grid.Column="0" 
                                Text="Off">
                                <TextBlock.Margin>
                                    <Thickness Right="{StaticResource Thickness-2}"/>
                                </TextBlock.Margin>
                            </TextBlock>
                            <CheckBox 
                                Grid.Column="1" 
                                Style="{StaticResource ToggleCheckBox}"
                                IsChecked="{Binding PinnedImage.Shadow.Visible}"/>
                        </Grid>
                    </Grid>
                    <Grid
                        Margin="{StaticResource SettingItemInnerContentMargin}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="44"/>
                            <RowDefinition Height="44"/>
                            <RowDefinition Height="44"/>
                            <RowDefinition Height="44"/>
                        </Grid.RowDefinitions>
                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="0"
                            Text="Opacity"
                            VerticalAlignment="Center"/>
                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="1"
                            Text="Depth"
                            VerticalAlignment="Center"/>
                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="2"
                            Text="Direction"
                            VerticalAlignment="Center"/>
                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="3"
                            Text="Blur Radius"
                            VerticalAlignment="Center"/>

                        <!--Opacity Slider-->
                        <Grid 
                            Grid.Column="2"
                            Grid.Row="0"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="42"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Grid.Column="0" 
                                d:Text="100"
                                Text="{Binding PinnedImage.Shadow.Opacity,Mode=OneWay, StringFormat=0.##}">
                                <TextBlock.Margin>
                                    <Thickness Right="{StaticResource Thickness-2}"/>
                                </TextBlock.Margin>
                            </TextBlock>
                            <Slider Grid.Column="1"
                                    Style="{StaticResource FlatSlider}"
                                    Minimum="0"
                                    Maximum="1"
                                    Value="{Binding PinnedImage.Shadow.Opacity}"
                                    IsEnabled="{Binding PinnedImage.Shadow.Visible}"/>
                        </Grid>

                        <!--Depth Slider-->
                        <Grid 
                            Grid.Column="2"
                            Grid.Row="1"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="42"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Grid.Column="0" 
                                d:Text="100"
                                Text="{Binding PinnedImage.Shadow.Depth,Mode=OneWay, StringFormat=0.##}">
                                <TextBlock.Margin>
                                    <Thickness Right="{StaticResource Thickness-2}"/>
                                </TextBlock.Margin>
                            </TextBlock>
                            <Slider Grid.Column="1"
                                    Style="{StaticResource FlatSlider}"
                                    Minimum="0"
                                    Maximum="20"
                                    Interval="1"
                                    Value="{Binding PinnedImage.Shadow.Depth}"
                                    IsEnabled="{Binding PinnedImage.Shadow.Visible}"/>
                        </Grid>

                        <!--Direction Slider-->
                        <Grid 
                            Grid.Column="2"
                            Grid.Row="2"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="42"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Grid.Column="0" 
                                d:Text="100"
                                Text="{Binding PinnedImage.Shadow.Direction,Mode=OneWay, StringFormat=0.##}">
                                <TextBlock.Margin>
                                    <Thickness Right="{StaticResource Thickness-2}"/>
                                </TextBlock.Margin>
                            </TextBlock>
                            <Slider Grid.Column="1"
                                    Style="{StaticResource FlatSlider}"
                                    Minimum="0"
                                    Maximum="360"
                                    Interval="1"
                                    Value="{Binding PinnedImage.Shadow.Direction}"
                                    IsEnabled="{Binding PinnedImage.Shadow.Visible}"/>
                        </Grid>

                        <!--Blur Radius Slider-->
                        <Grid 
                            Grid.Column="2"
                            Grid.Row="3"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="42"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Grid.Column="0" 
                                d:Text="100"
                                Text="{Binding PinnedImage.Shadow.BlurRadius,Mode=OneWay, StringFormat=0.##}">
                                <TextBlock.Margin>
                                    <Thickness Right="{StaticResource Thickness-2}"/>
                                </TextBlock.Margin>
                            </TextBlock>
                            <Slider Grid.Column="1"
                                    Style="{StaticResource FlatSlider}"
                                    Minimum="0"
                                    Maximum="20"
                                    Interval="1"
                                    Value="{Binding PinnedImage.Shadow.BlurRadius}"
                                    IsEnabled="{Binding PinnedImage.Shadow.Visible}"/>
                        </Grid>

                    </Grid>

                    <StackPanel 
                        Orientation="Vertical"
                        Margin="{StaticResource SettingItemInnerContentMargin}">
                        <TextBlock 
                            Text="Presets"
                            />
                    </StackPanel>
                </StackPanel>
            </Border>

            <StackPanel 
                Orientation="Horizontal" 
                FlowDirection="RightToLeft"
                >
                <StackPanel.Margin>
                    <Thickness Top="{StaticResource Thickness-4}"/>
                </StackPanel.Margin>
                <Button 
                    Style="{StaticResource StandardButton}"
                    Command="{Binding RollbackChangesCommand}">
                    Cancel
                </Button>
                <Button 
                    Style="{StaticResource ActionButton}"
                    Command="{Binding ApplyChangesCommand}">
                    <Button.Margin>
                        <Thickness Left="{StaticResource Thickness-1}"/>
                    </Button.Margin>
                    Apply Changes
                </Button>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
